{
  "name": "homebridge-ahoy-dtu",
  "version": "1.3.0-dev.1",
  "description": "Homebridge plugin for AHOY-DTU solar inverter monitoring with MQTT integration, multi-language support, GUI interface, and Apple Home Energy Provider support",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc && cp -r src/i18n/locales dist/i18n/",
    "watch": "npm run build && npm link && nodemon",
    "dev": "npm run build && npm link",
    "prepublishOnly": "npm run build",
    "dev:publish": "npm version prerelease --preid=dev && npm publish --tag dev",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "npm run lint && npm run build"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "ahoy-dtu",
    "solar",
    "inverter",
    "mqtt",
    "energy-provider",
    "apple-home",
    "multi-language",
    "i18n",
    "gui",
    "child-bridge",
    "renewable-energy",
    "photovoltaic"
  ],
  "engines": {
    "homebridge": ">=1.6.0",
    "node": ">=18.0.0"
  },
  "author": "Christian Braun",
  "license": "MIT",
  "dependencies": {
    "mqtt": "^5.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "homebridge": "^1.6.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chr-braun/homebridge-ahoy-dtu.git"
  },
  "bugs": {
    "url": "https://github.com/chr-braun/homebridge-ahoy-dtu/issues"
  },
  "homepage": "https://github.com/chr-braun/homebridge-ahoy-dtu#readme"
}
