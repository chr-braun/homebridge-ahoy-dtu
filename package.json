{
  "name": "homebridge-kostal-dtu",
  "version": "1.0.0-dev.1",
  "description": "Homebridge plugin for Kostal PV inverters with MQTT integration and Apple Home Energy Provider support",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc && cp -r src/i18n/locales dist/i18n/",
    "watch": "npm run build && npm link && nodemon",
    "dev": "npm run build && npm link",
    "prepublishOnly": "npm run build",
    "dev:publish": "npm version prerelease --preid=dev && npm publish --tag dev"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "kostal",
    "inverter",
    "solar",
    "pv",
    "mqtt",
    "energy-provider",
    "apple-home"
  ],
  "engines": {
    "homebridge": ">=1.6.0",
    "node": ">=18.0.0"
  },
  "author": "Christian Braun",
  "license": "MIT",
  "dependencies": {
    "mqtt": "^5.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "homebridge": "^1.6.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/homebridge-kostal-dtu.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/homebridge-kostal-dtu/issues"
  },
  "homepage": "https://github.com/yourusername/homebridge-kostal-dtu#readme"
}
